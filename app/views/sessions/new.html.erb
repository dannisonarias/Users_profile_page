<h1 class = "text-center"> Registration </h1>
<div class = "form">
 <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username, placeholder: "Enter Username here",class: 'form-control' %><br />

    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter Password here",class: 'form-control' %><br />
    <%= f.submit "login", class: "btn btn-primary" %>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", user_signup_path %></p>
</div>