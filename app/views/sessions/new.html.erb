<h1 class = "text-center"> Registration </h1>
<div class = "form">
 <nav>
      <ul class="nav navbar-nav navbar-right">

        <% if logged_in? %>
          <li><%= link_to "Users", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
 <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username, placeholder: "Enter Username here",class: 'form-control' %><br />

    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter Password here",class: 'form-control' %><br />
    <%= f.submit "login", class: "btn btn-primary" %>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", user_signup_path %></p>
</div>